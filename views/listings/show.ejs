<% layout("/layouts/boilerplate") %>
<body>
    <div class="row">
        <div class="col-md-8 offset-2 mt-3 mb-3">
            <h3>Listing Details : </h3>
            <div class="card" style="width: 18rem;">
                <img src="<%= typeof listing.image === 'string' ? listing.image : listing.image.url %>" class="card-img-top" style="height: 20rem;" alt="listing_image">
            </div>
            <p><b><%= listing.title %></b><br>
                <%= listing.description %><br>
                &#8377;<%= listing.price ? listing.price.toLocaleString("en-IN") : "N/A" %><br>
                <%= listing.country %><br>
            </p>
            <a href="/listings/<%= listing._id %>/edit" class="edit-link btn btn-primary">Edit this Listing</a>
            <br><br>
            <form method="post" action="/listings/<%= listing._id %>?_method=DELETE">
                <button class="btn btn-danger">Delete this listing</button>
            </form>
        </div>
    </div>
</body>
